<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.user.dao.UserDao">
    <resultMap id="userMap" type="com.user.pojo.User">
        <id property="id" column="id"></id>
    </resultMap>
    <insert id="insert" parameterType="com.user.pojo.User">
      insert into users (id,name) values (#{id,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR})
    </insert>
    <delete id="delete" parameterType="com.user.pojo.User">
    delete from users where id = #{id,jdbcType=VARCHAR}
    </delete>
    <update id="update" parameterType="com.user.pojo.User">
        update users set name = #{name,jdbcType=VARCHAR} where id = #{id,jdbcType=VARCHAR}
    </update>
    <select id="selectById" parameterType="java.lang.String" resultMap="userMap">
        select * from users where id = #{id,jdbcType=VARCHAR}
    </select>
</mapper>